#include <iostream>
#include <string>


using namespace std;



int main(){
int z;	
string a,b,c,d,e,f,g,v,n,m,k,j,x,y;
a = "ogurets";
b = "pomidor";
c = "kartoska";
d = "baklazhan";
e = "gribi";
f = "morkov";
g = "luk";




v = "yabloko";
n = "banan";
m = "mandarin";
k = "grusha";
j = "limon";
	
